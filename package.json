{
  "name": "form-js-mcp",
  "version": "1.0.0",
  "description": "MCP server for creating and manipulating JSON-based forms using @bpmn-io/form-js",
  "main": "dist/index.js",
  "scripts": {
    "build": "node esbuild.config.mjs",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "watch": "node esbuild.config.mjs --watch",
    "dev": "nodemon",
    "start": "node dist/index.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src/ test/",
    "lint:fix": "eslint src/ test/ --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "form-js",
    "forms",
    "bpmn-io",
    "camunda"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^4.0.18",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.2",
    "eslint-plugin-sonarjs": "^3.0.7",
    "eslint-plugin-unicorn": "^63.0.0",
    "eslint-plugin-vitest": "^0.5.4",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "bin": {
    "form-js-mcp": "./dist/index.js"
  }
}
